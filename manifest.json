{
  "manifest_version": 3,
  "name": "Mindful Words",
  "version": "1.0.0",
  "description": "A Chrome extension for saving and organizing web content",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html"
}